[project]
name = "{{project_name}}"
version = "0.1.0"
description = ""
authors = [
    {name = "{{author_name}}", email = "{{author_email}}"},
]
dependencies = [
   "missioncontrolbot"
]
requires-python = ">=3.11"
readme = "README.md"
